<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Past Trips
  </div>

  <ul class="list-group list-group-flush">
    <% @user.stays.where(approved: true, check_out: ..Date.current).each do |stay| %>
      <%= link_to stay.room, class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
        <div class="row">
          <div class="col-4">
            <%= cl_image_tag stay.room.photos.first&.url, class: "img-fluid" %>
          </div>
          <div class="col-8">
            <%= stay %>
          </div>
        </div>
      <% end %>

    <% end %>
  </ul>
</div>
<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Upcoming Trips
  </div>

  <ul class="list-group list-group-flush">
    <% @user.stays.where(approved: true, check_out: Date.current..).each do |stay| %>
      <%= link_to stay.room, class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
        <div class="row">
          <div class="col-4">
            <%= cl_image_tag stay.room.photos.first&.url, class: "img-fluid" %>
          </div>
          <div class="col-8">
            <%= stay %>
          </div>
        </div>
      <% end %>

    <% end %>
  </ul>
</div>
