<%= form_with(model: @stay, local: true) do |f| %>

  <%= f.hidden_field :guest_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :room_id %>

    <%= f.collection_select :room_id, Room.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :check_in %>

    <%= f.date_select :check_in, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :check_out %>

    <%= f.date_select :check_out, class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :approved, class: "form-check-input" %>
    <%= f.label :approved, class: "form-check-label" %>
  </div>

  <%= f.submit "Create stay", class: "btn btn-block btn-outline-secondary" %>
<% end %>
