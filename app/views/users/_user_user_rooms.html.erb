<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Rooms

    <a data-toggle="collapse" href="#user_user_rooms_new_form">
      Add user room
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.user_rooms.each do |user_room| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to user_room, user_room %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_user_rooms_new_form">
        <%= render partial: "users/user_user_rooms_new_form" %>
      </div>
    </div>

  </ul>
</div>
