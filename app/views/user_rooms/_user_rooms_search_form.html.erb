<%= search_form_for @q, :class => collapse_search_form, :id => "user_rooms_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :check_in, "Check in" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='check_ingteqPicker' data-target-input="nearest">
          <%= f.text_field :check_in_gteq, :class => "form-control datetimepicker-input", :placeholder => "Check in greater than or equal to", :data => {:target => '#check_ingteqPicker'} %>
          <div class="input-group-append" data-target='#check_ingteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='check_inlteqPicker' data-target-input="nearest">
          <%= f.text_field :check_in_lteq, :class => "form-control datetimepicker-input", :placeholder => "Check in less than or equal to", :data => {:target => '#check_inlteqPicker'} %>
          <div class="input-group-append" data-target='#check_inlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#check_ingteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#check_inlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#check_ingteqPicker').on("dp.change", function (e) {
              $('#check_inlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#check_inlteqPicker').on("dp.change", function (e) {
              $('#check_ingteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :approved_eq, "Approved" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :approved_eq, "1", checked: ((params[:q] && params[:q][:approved_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :approved_eq, "0", checked: ((params[:q] && params[:q][:approved_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :approved_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :check_out, "Check out" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='check_outgteqPicker' data-target-input="nearest">
          <%= f.text_field :check_out_gteq, :class => "form-control datetimepicker-input", :placeholder => "Check out greater than or equal to", :data => {:target => '#check_outgteqPicker'} %>
          <div class="input-group-append" data-target='#check_outgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='check_outlteqPicker' data-target-input="nearest">
          <%= f.text_field :check_out_lteq, :class => "form-control datetimepicker-input", :placeholder => "Check out less than or equal to", :data => {:target => '#check_outlteqPicker'} %>
          <div class="input-group-append" data-target='#check_outlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#check_outgteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#check_outlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#check_outgteqPicker').on("dp.change", function (e) {
              $('#check_outlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#check_outlteqPicker').on("dp.change", function (e) {
              $('#check_outgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :guest_name_cont, "Guest name contains" %>
    <%= f.text_field :guest_name_cont, :class => "form-control", :placeholder => "Guest name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :room_name_cont, "Room name contains" %>
    <%= f.text_field :room_name_cont, :class => "form-control", :placeholder => "Room name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/user_rooms" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

