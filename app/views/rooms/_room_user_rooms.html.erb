<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Rooms

    <a data-toggle="collapse" href="#room_user_rooms_new_form">
      Add user room
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @room.user_rooms.each do |user_room| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to user_room, user_room %>

        <%= link_to user_room, method: :delete, data: { confirm: "Do you really want to delete this user_room" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="room_user_rooms_new_form">
        <%= render partial: "rooms/room_user_rooms_new_form" %>
      </div>
    </div>

  </ul>
</div>
