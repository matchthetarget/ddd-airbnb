<%= search_form_for @q, :class => collapse_search_form, :id => "rooms_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.label :number_of_bedrooms, "Number of bedrooms" %>
        <%= f.text_field :number_of_bedrooms_gteq, :class => "form-control", :placeholder => "Number of bedrooms greater than or equal to" %>
      </div>
      <div class='col-md-6'>
      <%= f.label :number_of_bathrooms, "Number of bathrooms" %>
        <%= f.text_field :number_of_bathrooms_gteq, :class => "form-control", :placeholder => "Number of bathrooms greater than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :check_in, "Stay Check in" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='staysgteqcheck_inPicker' data-target-input="nearest">
          <%= f.text_field :stays_check_in_gteq, :class => "form-control datetimepicker-input", :placeholder => "Stay Check in greater than or equal to", :data => {:target => '#staysgteqcheck_inPicker'} %>
          <div class="input-group-append" data-target='#staysgteqcheck_inPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='stayslteqcheck_inPicker' data-target-input="nearest">
          <%= f.text_field :stays_check_in_lteq, :class => "form-control datetimepicker-input", :placeholder => "Stay Check in less than or equal to", :data => {:target => '#stayslteqcheck_inPicker'} %>
          <div class="input-group-append" data-target='#stayslteqcheck_inPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#staysgteqcheck_inPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#stayslteqcheck_inPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#staysgteqcheck_inPicker').on("dp.change", function (e) {
              $('#stayslteqcheck_inPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#stayslteqcheck_inPicker').on("dp.change", function (e) {
              $('#staysgteqcheck_inPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/rooms" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#rooms_filters">
  Show filters
</a>
