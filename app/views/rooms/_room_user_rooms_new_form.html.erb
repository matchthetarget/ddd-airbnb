<%= form_with(model: @user_room, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :guest_id %>

    <%= f.collection_select :guest_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :room_id, value: @room.id %>

  <div class="form-group">
    <%= f.label :check_in %>

    <%= f.date_select :check_in, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :check_out %>

    <%= f.date_select :check_out, class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :approved, class: "form-check-input" %>
    <%= f.label :approved, class: "form-check-label" %>
  </div>

  <%= f.submit "Create user room", class: "btn btn-block btn-outline-secondary" %>
<% end %>
