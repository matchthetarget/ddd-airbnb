<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Photos

    <a data-toggle="collapse" href="#room_photos_new_form">
      Add photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @room.photos.each do |photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to photo, photo %>

        <%= link_to photo, method: :delete, data: { confirm: "Do you really want to delete this photo" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="room_photos_new_form">
        <%= render partial: "rooms/room_photos_new_form" %>
      </div>
    </div>

  </ul>
</div>
