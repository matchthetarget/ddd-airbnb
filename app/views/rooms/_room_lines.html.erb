<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Lines

    <a data-toggle="collapse" href="#room_lines_new_form">
      Add line
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @room.lines.each do |line| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to line, line %>

        <%= link_to line, method: :delete, data: { confirm: "Do you really want to delete this line" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="room_lines_new_form">
        <%= render partial: "rooms/room_lines_new_form" %>
      </div>
    </div>

  </ul>
</div>
