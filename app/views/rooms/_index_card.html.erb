<%= link_to room, class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
  <div class="row">
    <div class="col-4">
      <%= cl_image_tag room.photos.first&.url, class: "img-fluid" %>
    </div>
    <div class="col-8">
      <h3><%= room.name %></h3>
      <p>
        <%= room.number_of_bedrooms %> bedrooms ●
        <%= room.number_of_bathrooms %> bathrooms
      </p>
      <p class="d-flex justify-content-between">
        <span>
          <%= room.lines.count %> likes
        </span>
        <span>
          <%= room.cost_per_night.to_s(:currency) %> / night
        </span>
      </p>
      <div>
        <% like = Line.find_by(location: room, user: current_user) %>
        <% if like.present? %>
          <i class="fas fa-heart"></i>
        <% else %>
          <i class="far fa-heart"></i>
        <% end %>
      </div>
    </div>
  </div>


<% end %>
