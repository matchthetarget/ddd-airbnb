<div class="card mb-3">
  <h2 class="card-header h4">
    Line #<%= line.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @line.user.present? %>
          <%= link_to line.user, line.user %>
        <% end %>
      </dd>

      <dt>Location</dt>
      <dd>
        <% if @line.location.present? %>
          <%= link_to line.location, line.location %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back line, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_line_url(line), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to line, method: :delete, data: { confirm: "Do you really want to delete this line?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(line.updated_at) %> ago
  </div>
</div>
